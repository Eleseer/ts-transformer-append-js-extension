{
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"lib": ["ES6"],
		"target": "ES6",
		"module": "ES6",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"strict": true,
		"plugins": [
			{ "transform": "../src/index.ts" }
		]
	},
	"include": [
		"./src/**/*",
		"../src/**/*"
	],
}